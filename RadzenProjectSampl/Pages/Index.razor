@page "/"

@using Radzen.Blazor
<PageTitle>Index</PageTitle>


<div class="m-3 mt-4">
    <h1>Welcome to Your Clothing Brand</h1>
    <p>Discover our latest collection of stylish clothing.</p>

    <ImageSlideSHow />
    <RadzenCard>
        <div class="container" style="background:black">
            <div class="d-flex flex-wrap justify-content-center align-items-center">
                <div class="latest-banner-text">
                    <h1>Latest Luxury Pret Collection '24</h1>
                </div>
                <div class="latest-banner-button">
                    <a>Button</a>
                </div>
            </div>
        </div>
    </RadzenCard>

    <div class="Main_style-div">
        <div class="d-flex flex-nowrap justify-content-center align-items-center">
            <RadzenRow>
                @foreach (var _ in Enumerable.Range(1, 7))
                {
                    <RadzenColumn>
                        <RadzenCard Style="margin-bottom: 20px;">
                            <div class="">
                                <img src="images/EMBROI_1.webp" class="card-img-top" alt="Product 1" />
                            </div>
                            <div class="card-body" style="text-align: center;">
                                <p class="card-text">A stylish T-Shirt </p>
                            </div>
                        </RadzenCard>
                    </RadzenColumn>
                }
            </RadzenRow>
        </div>
    </div>
    <div class="col-12">
        <RadzenRow>
            @foreach (var image in Images)
            {
                <RadzenColumn Size="4">
                    <RadzenCard Style="margin-bottom: 20px;">
                        <div class="full-height-card">
                            <div style="position:relative">
                                <a href="@image.ProductUrl">
                                    <img src="@image.ImagePath" class="card-img-top full-height-card-img" alt="Product Image" />
                                    <div class="col-12 text-overlay">
                                        <h3>This photo is related to</h3>
                                    </div>
                                </a>
                            </div>
                        </div>
                    </RadzenCard>
                </RadzenColumn>
            }
        </RadzenRow>

    </div>
    <YouMayAlsoLike />
    <RadzenCard>
        <div class="container" style="background:black">
            <div class="d-flex flex-wrap justify-content-center align-items-center">
                <div class="latest-banner-text">
                    <h1>TOP Seller </h1>
                </div>
                <div class="latest-banner-button">
                    <a>Watch All</a>
                </div>
            </div>
        </div>
    </RadzenCard>
    <ImageSlider />@* AutoMAtic Chnages Images *@
</div>
@code {
    public class ImageModel
    {
        public string ImagePath { get; set; }
        public string ProductUrl { get; set; }
    }

    private List<ImageModel> Images = new List<ImageModel>
{
    new ImageModel { ImagePath = "images/image (1).jpeg", ProductUrl = "product" },
    new ImageModel { ImagePath = "images/image (2).jpeg", ProductUrl = "product" },
    new ImageModel { ImagePath = "images/image (3).jpeg", ProductUrl = "product" }
};

}